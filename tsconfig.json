{
    "compilerOptions": {
      "target": "es2020",
      "module": "es2020",
      "lib": ["ES2020"],
      "allowJs": true,
      "outDir": "build",
      "rootDir": "src",
      "strict": true,
      "noImplicitAny": true,
      "esModuleInterop": true,
      "sourceMap": true,
      "resolveJsonModule": true,
      "forceConsistentCasingInFileNames": true,
      "plugins": [
        { "name": "typescript-tslint-plugin" }
      ]
    },
    "include": ["src/**/*"]
  }
